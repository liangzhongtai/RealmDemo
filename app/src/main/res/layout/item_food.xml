<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/tv_fid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingLeft="14dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:text="fid:"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tv_fid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_fid_title"
        android:paddingTop="14dp"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:text="100"
        />
    <TextView
        android:id="@+id/tv_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_fid"
        android:paddingTop="14dp"
        android:paddingLeft="42dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:text="名称:"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/tv_name_title"
        android:textSize="12sp"
        android:text="竹子"
        />
    <TextView
        android:id="@+id/tv_animal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingLeft="42dp"
        android:layout_toRightOf="@id/tv_name"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:text="喂食:"/>
    <TextView
        android:id="@+id/tv_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_animal_title"
        android:paddingTop="14dp"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:text="熊猫"
        />
    <TextView
        android:id="@+id/tv_aid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="42dp"
        android:paddingTop="4dp"
        android:layout_below="@id/tv_fid"
        android:layout_toRightOf="@id/tv_fid"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:text="aid:"/>
    <TextView
        android:id="@+id/tv_aid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:textSize="12sp"
        android:text="100"
        android:layout_alignBaseline="@+id/tv_aid_title"
        android:layout_alignBottom="@+id/tv_aid_title"
        android:layout_toRightOf="@+id/tv_aid_title"
        android:layout_toEndOf="@+id/tv_aid_title" />
    <View
        android:id="@+id/v_line1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        />
</RelativeLayout>